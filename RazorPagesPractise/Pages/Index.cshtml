@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1>BookList</h1>
    <h3>Welcome to the world biggest library known to people</h3>
    <p>
        <a asp-page="AddBook">Add New</a>
    </p>

   
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Book[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book[0].FullName)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Book)
            {
                <tr>
                    <td>
                        <a asp-page="BookDetail" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    
                    <td>
                        <a asp-page="UpdateBook" asp-route-id="@item.Id">Edit</a>
                        <a asp-page-handler="DeleteBook" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
